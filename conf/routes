# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
#GET     /                           controllers.Application.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

#MyOntology
#show all classes name
GET		/onto/all					controllers.MyOntology.all()
#get specific properties
GET    /onto/get                    controllers.MyOntology.getProperties(classname)
GET	   /onto/relation				controllers.MyOntology.getRelation(classname1,classname2)

#MyIndividual
GET    /indiv/get					 controllers.MyIndividual.get(classname)
GET	   /indiv/getpro		    	 controllers.MyIndividual.getProperties(indivname,proname ?= null)
PUT    /indiv/update                 controllers.MyIndividual.update()
PUT   /indiv/getbylabel			     controllers.MyIndividual.getIndivByLabel()
GET	   /indiv/remove                 controllers.MyIndividual.remove(indivname,proname ?= null)